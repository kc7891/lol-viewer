{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "./dist",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "target": "ES2022",
    "lib": ["ES2022"],
    "types": ["node", "electron"],
    "rootDir": "./src"
  },
  "include": ["src/electron/**/*", "src/index.ts", "src/types/**/*", "src/utils/**/*", "src/core/**/*"],
  "exclude": ["node_modules", "dist", "tests"]
}
