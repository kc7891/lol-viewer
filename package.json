{
  "name": "lol-viewer",
  "version": "1.0.0",
  "description": "LoL Analytics Viewer - Electron app for viewing LoL champion builds",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron .",
    "build": "electron-builder --win --x64",
    "build:dir": "electron-builder --dir",
    "test": "jest"
  },
  "keywords": [
    "lol",
    "league of legends",
    "analytics",
    "electron"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^26.0.12",
    "jest": "^30.2.0"
  },
  "build": {
    "appId": "com.lolviewer.app",
    "productName": "LoL Viewer",
    "directories": {
      "output": "dist"
    },
    "win": {
      "target": "zip"
    },
    "files": [
      "main.js",
      "preload.js",
      "renderer.js",
      "index.html",
      "package.json"
    ]
  }
}
